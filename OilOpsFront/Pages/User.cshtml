@page
@model OilOpsFront.Pages.User

@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Usuarios";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
</head>

<body>
<div>
    <div class="img-box">
        <img src="images/users.jpg" alt="bg1"/> 
        
        <div class="title">
            <h1>Usuarios</h1>
            <h2>Administrá tu perfil de manera fácil y segura</h2>
        </div>
    </div>

    
    <!-- List: GetAll -->
    <h3 class="h3">Listado de Usuarios</h3>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var user in Model.userList)
        {
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <p class="card-title">Nombre completo</p>
                        <p class="card-text">@user.FullName</p>
                        
                        <p class="card-title">Cod. Usuario:</p>
                        <p class="card-text">@user.Id</p>
                        
                        <p class="card-title">DNI</p>
                        <p class="card-text">@user.DNI</p>
                        
                        <p class="card-title">Nombre de Usuario</p>
                        <p class="card-text">@user.UserName</p>
                        
                       <!-- <p class="card-title">Contraseña</p>
                        <p class="card-text">  user. Password</p> -->
                    </div>
                </div>
            </div>
        }
    </div>
    
    <!-- Search: GetById -->
    <form method="get" class="form-inline my-2 my-lg-0">
        <p>Buscador mediante Código de Usuario</p>
        <input
            class="form-control mr-sm-2"
            type="search"
            placeholder="Search"
            aria-label="Search"/>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
            Buscar
        </button>
    </form>
    
    <div class="container-box">
        <article class="box">
            @foreach(var user in Model.userList)
            {
                <div class="properties">
                    <div class="fullName">
                        <p>Nombre completo</p>
                        <p>@user.FullName</p>
                    </div>
                    <div class=id>
                        <p>Cod. Usuario:</p>
                        <p>@user.Id</p>
                    </div>            
                    <div class="dni">
                        <p>DNI</p>
                        <p>@user.DNI</p>
                    </div>
                    <div class="userName">
                        <p>Nombre de Usuario</p>
                        <p>@user.UserName</p>
                    </div>
                    <!-- <div class="password">
                        <p>Contraseña</p>
                        <p> user.Password</p>
                    </div> -->
                </div>
            }
        </article>
    </div>

    <!-- Add - Edit - Delete?: Post -->
    <div class="cart">
        <form method="post">
            <div class="content">
                <label asp-for="user.Id" for="Id" class="form-label">Código del Usuario</label>
                <input
                    asp-for="user.Id"
                    type="number" 
                    id="Id" 
                    name="Id" 
                    class="inputs" 
                    placeholder="Ingresar código del usuario" />
            </div>
            <div class="box">
                <div class="main-box">
                    <label asp-for="user.FullName" for="FullName" class="form-label">Nombre Completo</label>
                    <input 
                        asp-for="user.FullName"
                        type="text" 
                        id="FullName" 
                        name="FullName" 
                        class="inputs" 
                        placeholder="Ingresar nombre completo" />
                </div>
                <div class="main-box">
                    <label asp-for="user.DNI" for="DNI" class="form-label">DNI</label>
                    <input 
                        asp-for="user.DNI" 
                        type="number" 
                        id="DNI" 
                        name="DNI" 
                        class="inputs" 
                        placeholder="Ingresar DNI" />
                </div>
            </div>
            <div class="box">
                <div class="main-box">
                    <label asp-for="user.UserName" for="UserName" class="form-label">Nombre de Usuario</label>
                    <input 
                        asp-for="user.UserName" 
                        type="text" 
                        id="UserName" 
                        name="UserName" 
                        class="inputs" 
                        placeholder="Ingresar nombre de usuario" />
                </div>
                <div class="main-box">
                    <label asp-for="user.Password" for="Password" class="form-label">Contraseña</label>
                    <input 
                        asp-for="user.Password" 
                        type="text" 
                        id="Password" 
                        name="Password" 
                        class="inputs" 
                        placeholder="Ingresar contraseña" />
                </div>
            </div>
            <div class="buttons">
                <button asp-page-handler="post"
                        type="submit" 
                        class="btn btn-success">Agregar
                </button>
                <!-- Edit:   -->
                <!-- <button type="submit" class="btn btn-primary">Modificar</button>
                <button type="submit" class="btn btn-danger">Eliminar</button> -->
            </div>
        </form>
    </div>
</div>
</body>
</html>